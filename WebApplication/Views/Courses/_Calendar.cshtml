@* ReSharper disable UnknownCssClass *@
@model WebApplication.Forms.Courses.CreateCourseForm

@{
    string[] daysOfWeek = {"Mon", "Tue", "Wed", "Thu", "Fri"};
}

<link href="@Url.Content("~/Content/Calendar.css")" rel="stylesheet" type="text/css"/>

@Html.HiddenFor(model => model.SpendingTimeStart)
@Html.HiddenFor(model => model.SpendingTimeEnd)

<table class="table-bordered">
    <tr>
        <th class="calendar-cell-corner">@*top left corner*@</th>
        @foreach (var day in daysOfWeek)
        {
            <th class="calendar-cell calendar-cell-th">@day.</th>
        }
    </tr>
    @for (var i = 9; i <= 17; i++)
    {
        <tr>
            <th class="calendar-cell calendar-cell-th calendar-cell-hour">@i.ToString().PadLeft(2, '0'):00</th>
            @foreach (var day in daysOfWeek)
            {
                <td class="calendar-cell calendar-cell-td" data-day="@day" data-hour="@i"></td>
            }
        </tr>
    }
</table>
<script>
    function toggleCell(cell) {
        if (cell.hasClass('calendar-cell-selected')) {
            cell.removeClass('calendar-cell-selected');
        } else {
            cell.addClass('calendar-cell-selected');
        }
    }

    $('.calendar-cell-td').each(function(index) {
        var cell = $(this);
        console.log(index + ": " + cell.data('day') + ", " + cell.data('hour'));
        cell.click(function() {
            toggleCell(cell);
        });
    });
</script>